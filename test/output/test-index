CREATE SCHEMA
CREATE TABLE
CREATE INDEX
CREATE INDEX
CREATE SCHEMA
CREATE TABLE

# Compare the indexes in all schemas between two databases
# Expect SQL (pseudocode):
#   Drop index on db2 s1.table1.url
#   Add index on db2 s2.table1.url

DROP INDEX s1.table1_url_idx;
CREATE INDEX table1_url_idx ON s2.table1 USING btree (url);


