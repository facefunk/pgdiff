# Compare the indexes between two schemas in the same database
# Expect SQL (pseudocode):
#   Add index on s2.table1.name
#   Drop index on s2.table1.url

CREATE INDEX table1_name_idx ON s2.table1 USING btree (name);
--Comparing (table_name and/or index_name is empty): map[]
DROP INDEX s2.table1_url_idx;

