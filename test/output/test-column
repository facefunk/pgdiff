# Compare the columns in all schemas between two databases
# Expect:
#   Change s1.table9.name to varchar(50) 
#   Add s1.table10.id
#   Drop s1.table11.dropme

ALTER TABLE s1.table10 ADD COLUMN id bigint;
ALTER TABLE s1.table11 DROP COLUMN IF EXISTS dropme;
ALTER TABLE s1.table9 ALTER COLUMN name TYPE character varying(50);

