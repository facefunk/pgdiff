# Compare the grants in all schemas between two databases
# Expect SQL (pseudocode):
#   Revoke SELECT     (id)   on s1.table1 for u2
#   Grant  UPDATE     (name) on s2.table1 for u2
#   Revoke REFERENCES (name) on s2.table1 for u2
#   Revoke UPDATE     (name) on s2.table3 for u2
#   Grant  UPDATE     (name) on s2.table4 for u2

REVOKE SELECT (id) ON s1.table1 FROM u2; -- Drop
GRANT UPDATE (name) ON s2.table1 TO u2; -- Change
REVOKE REFERENCES (name) ON s2.table1 FROM u2; -- Change
REVOKE UPDATE (name) ON s2.table3 FROM u2; -- Drop
GRANT UPDATE (name) ON s2.table4 TO u2; -- Add


